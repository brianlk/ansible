/* Requires the Docker Pipeline plugin */
pipeline {
    agent none
    stages {
        stage('Checkout') {
            agent { 
                docker { 
                    image 'python:3.12.0-alpine3.18'
                    //args '-u root --privileged' */
                    label 'docker'
                    //customWorkspace  '/var/tmp/jenkins'
                } 
            }            
            steps {
                checkout scm
                sh """
                    ls -lat
                    python -m venv venv
                    source venv/bin/activate
                    pip install -r requirements.txt
                """
            }
        }
        stage('Test') {
            agent { 
                docker { 
                    image 'python:3.12.0-alpine3.18'
                    label 'docker'
                } 
            }   
            steps {
                checkout scm
                sh """
                    source venv/bin/activate
                    pip install -r requirements.txt
                    pytest tests
                """
            }
        }
        stage('Test2') {
            agent any   
            steps {
                sh """
                    ls -l /etc
                """
            }
        }

    }
}
