/* Requires the Docker Pipeline plugin */
pipeline {
    agent { 
        docker { 
            image 'python:3.12.0-alpine3.18'
            // label 'docker'
        } 
    }
    stages {
        stage("Clone sources") {
            steps {
                checkout scm
            }
        }
        stage('Build') {        
            steps {
                sh '''
                    python -m venv venv
                    source venv/bin/activate
                    pip install -r requirements.txt
                '''
            }
        }
        stage('Test') {      
            steps {
                sh '''
                    source venv/bin/activate
                    pytest tests
                '''
            }
        }
        stage('Deploy') {
            agent {
                node {
                    label 'docker'
                }
            }
            steps {
                sh """
                    docker build -t yyy .
                """
            }
        }

    }
}
