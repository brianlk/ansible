/* Requires the Docker Pipeline plugin */
pipeline {
    agent none
    stages {
        stage("Clone sources") {
            agent { 
                docker { 
                    image 'python:3.12.0-alpine3.18'
                    label 'docker'
                } 
            }
            steps {
                checkout scm
            }
        }
        stage('Build and Test') {
            agent { 
                docker { 
                    image 'python:3.12.0-alpine3.18'
                    //args '-u root --privileged' */
                    label 'docker'
                    //customWorkspace  '/var/tmp/jenkins'
                } 
            }            
            steps {
                sh "ls -lt"
                sh '''
                    python -m venv venv
                    source venv/bin/activate
                    pip install -r requirements.txt
                    pytest tests
                '''
            }
        }
        stage('Test2') {
            agent {
                node {
                    label 'docker'
                }
            }
            steps {
                sh """
                    pwd
                """
            }
        }

    }
}
